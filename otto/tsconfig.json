{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./core/*"]
    }
  },
  "include": ["core/**/*", "test/unit/system.test.ts", "test/unit/agent.test.ts"],
  "exclude": ["node_modules", "dist"]
} 